<UserControl x:Class="Bc3_WPF.Screens.Comparador"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bc3_WPF.Screens"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#F5F7FA">

    <!-- Recursos y estilos generales -->
    <UserControl.Resources>
        <!-- Colores principales -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#1976D2"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#3949AB"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FF4081"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="CardColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimaryColor" Color="#212121"/>
        <SolidColorBrush x:Key="TextSecondaryColor" Color="#757575"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>

        <!-- Estilos para botones -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#90CAF9"/>
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para ComboBox -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para DataGrid -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <!-- Estilo para TabControl -->
        <Style x:Key="ModernTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Estilo para TabItem -->
        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="Transparent" Margin="0,0,4,0">
                            <Grid>
                                <ContentPresenter x:Name="ContentSite" 
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 ContentSource="Header"
                                                 Margin="10,6,10,6"/>
                                <Border x:Name="SelectedBorder" 
                                       Height="3" 
                                       Background="{StaticResource PrimaryColor}" 
                                       VerticalAlignment="Bottom" 
                                       Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Panel.ZIndex" Value="1"/>
                                <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="ContentSite" Property="TextElement.FontWeight" Value="SemiBold"/>
                                <Setter TargetName="SelectedBorder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Card (Paneles) -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para TextBlock -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryColor}"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Fila 0: Selector de Archivos -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnOpenFiles" Grid.Column="0" Content="Abrir Archivos" Width="140" Height="36" 
                        Style="{StaticResource PrimaryButtonStyle}" Click="btnOpenFiles_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Border Grid.Column="1" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderColor}" 
                        Margin="16,0,16,0" VerticalAlignment="Center">
                    <TextBlock x:Name="txtSelectedFiles" Padding="4" Text="No hay archivos seleccionados" 
                               Foreground="{StaticResource TextSecondaryColor}"/>
                </Border>

                <Button x:Name="btnCompareFiles" Grid.Column="2" Content="Comparar" Width="120" Height="36" 
                        Style="{StaticResource SecondaryButtonStyle}" Click="btnCompareFiles_Click" IsEnabled="False"/>
            </Grid>
        </Border>

        <!-- Fila 1: Selector de Métricas y Base de Datos -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Métrica:" VerticalAlignment="Center" Margin="0,0,12,0"
                           Style="{StaticResource HeaderTextStyle}"/>

                <ComboBox Grid.Column="1" x:Name="cmbMetrica" Margin="0,0,16,0" Style="{StaticResource ModernComboBoxStyle}"
                          SelectionChanged="cmbMetrica_SelectionChanged"/>
            </Grid>
        </Border>

        <!-- Fila 2: TabControl con Vistas -->
        <TabControl Grid.Row="2" x:Name="tabViews" Margin="0,0,0,16" Style="{StaticResource ModernTabControlStyle}">
            <TabControl.ItemContainerStyle>
                <Style BasedOn="{StaticResource ModernTabItemStyle}" TargetType="TabItem"/>
            </TabControl.ItemContainerStyle>

            <!-- Pestaña 1: Resumen -->
            <TabItem Header="Resumen">
                <Border Style="{StaticResource CardStyle}" Margin="0,12,0,0">
                    <DataGrid x:Name="dgSummary" AutoGenerateColumns="False" IsReadOnly="True" 
                              Style="{StaticResource ModernDataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Archivo" Binding="{Binding FileName}" Width="200"/>
                            <DataGridTextColumn Header="Métrica" Binding="{Binding Metric}" Width="120"/>
                            <DataGridTextColumn Header="Valor Total" Binding="{Binding TotalValue, StringFormat=N2}" Width="120"/>
                            <DataGridTextColumn Header="Categorías" Binding="{Binding CategoryCount}" Width="80"/>
                            <DataGridTextColumn Header="Conceptos" Binding="{Binding ConceptCount}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>

            <!-- Pestaña 2: Por Categorías -->
            <TabItem Header="Por Categorías">
                <Border Style="{StaticResource CardStyle}" Margin="0,12,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <ComboBox Grid.Row="0" x:Name="cmbSelectedFile" Margin="0,0,0,16" Style="{StaticResource ModernComboBoxStyle}"
                                  SelectionChanged="cmbSelectedFile_SelectionChanged"/>

                        <DataGrid Grid.Row="1" x:Name="dgCategories" AutoGenerateColumns="False" IsReadOnly="True"
                                  Style="{StaticResource ModernDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Categoría" Binding="{Binding Category}" Width="150"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding Value, StringFormat=N2}" Width="120"/>
                                <DataGridTextColumn Header="% del Total" Binding="{Binding Percentage, StringFormat=P2}" Width="100"/>
                                <DataGridTextColumn Header="Conceptos" Binding="{Binding ConceptCount}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Pestaña 3: Comparación en Tabla -->
            <TabItem Header="Comparación Tabla" x:Name="tabComparison">
                <Border Style="{StaticResource CardStyle}" Margin="0,12,0,0">
                    <DataGrid x:Name="dgComparison" AutoGenerateColumns="False" IsReadOnly="True"
                              Style="{StaticResource ModernDataGridStyle}"/>
                </Border>
            </TabItem>

            <!-- Pestaña 4: Gráfico de Comparación -->
            <TabItem Header="Gráfico Comparativo" x:Name="tabChartComparison">
                <Border Style="{StaticResource CardStyle}" Margin="0,12,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#F5F7FA" CornerRadius="4" Padding="12" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Comparar por:" VerticalAlignment="Center" Margin="0,0,10,0"
                                           Style="{StaticResource SubHeaderTextStyle}"/>

                                <ComboBox Grid.Column="1" x:Name="cmbCompareBy" Width="150" Style="{StaticResource ModernComboBoxStyle}"
                                          SelectionChanged="cmbCompareBy_SelectionChanged">
                                    <ComboBoxItem Content="Categorías" IsSelected="True"/>
                                    <ComboBoxItem Content="Total por Archivo"/>
                                </ComboBox>

                                <TextBlock Grid.Column="2" Text="Tipo de gráfico:" VerticalAlignment="Center" Margin="20,0,10,0"
                                           Style="{StaticResource SubHeaderTextStyle}"/>

                                <ComboBox Grid.Column="3" x:Name="cmbChartType" Width="150" Style="{StaticResource ModernComboBoxStyle}"
                                          SelectionChanged="cmbChartType_SelectionChanged">
                                    <ComboBoxItem Content="Barras" IsSelected="True"/>
                                    <ComboBoxItem Content="Columnas"/>
                                    <ComboBoxItem Content="Apilado"/>
                                </ComboBox>

                                <StackPanel Grid.Column="4" x:Name="panelCategoryOptions" Orientation="Horizontal">
                                    <TextBlock Text="Mostrar Top:" VerticalAlignment="Center" Margin="20,0,10,0"
                                               Style="{StaticResource SubHeaderTextStyle}"/>

                                    <ComboBox x:Name="cmbTopCategories" Width="80" Style="{StaticResource ModernComboBoxStyle}"
                                              SelectionChanged="cmbTopCategories_SelectionChanged">
                                        <ComboBoxItem Content="5"/>
                                        <ComboBoxItem Content="10" IsSelected="True"/>
                                        <ComboBoxItem Content="Todas"/>
                                    </ComboBox>
                                </StackPanel>

                                <CheckBox Grid.Column="5" x:Name="chkShowLegend" Content="Mostrar leyenda" Margin="20,0,0,0" 
                                          IsChecked="True" Checked="chkShowLegend_CheckedChanged" Unchecked="chkShowLegend_CheckedChanged"
                                          HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryColor}"/>
                            </Grid>
                        </Border>

                        <lvc:CartesianChart Grid.Row="1" x:Name="chartComparison"/>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Fila 3: Barra de Estado -->
        <Border Grid.Row="3" Background="#FFFFFF" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderColor}">
            <Grid Height="32">
                <TextBlock x:Name="txtStatus" Text="Listo" VerticalAlignment="Center" Margin="12,0,0,0"
                           Foreground="{StaticResource TextSecondaryColor}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
