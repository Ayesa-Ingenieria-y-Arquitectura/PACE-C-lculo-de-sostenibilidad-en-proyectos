<UserControl x:Class="Bc3_WPF.Screens.TablaDePresupuestos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bc3_WPF"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:vms="clr-namespace:Bc3_WPF.Screens.Charts"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1200"
             Background="#F5F7FA">

    <!-- Your ViewModel -->
    <UserControl.DataContext>
        <vms:Pie/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Color palette -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#2ECC71"/>
        <SolidColorBrush x:Key="DarkTextColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="LightTextColor" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BackgroundDark" Color="#34495E"/>
        <SolidColorBrush x:Key="AccentColor" Color="#E74C3C"/>

        <!-- Button styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1F618D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card style for rectangles -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundLight}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.2" Color="#555"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TreeView styles -->
        <Style x:Key="ModernTreeViewItem" TargetType="{x:Type TreeViewItem}">
            <Setter Property="Padding" Value="5,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextColor}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="IsExpanded" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TreeViewItem}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <!-- Botón Expandir/Colapsar -->
                            <ToggleButton x:Name="Expander" 
                                          ClickMode="Press"
                                          IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Focusable" Value="False"/>
                                        <Setter Property="Width" Value="18"/>
                                        <Setter Property="Height" Value="18"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Width="18" Height="18" Background="Transparent">
                                                        <Path x:Name="ExpandPath" 
                                                              Stroke="#888888" 
                                                              StrokeThickness="1.5"
                                                              HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center">
                                                            <Path.Data>
                                                                <PathGeometry Figures="M 4,9 L 14,9 M 9,4 L 9,14" />
                                                            </Path.Data>
                                                        </Path>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="ExpandPath" Property="Data">
                                                                <Setter.Value>
                                                                    <PathGeometry Figures="M 4,9 L 14,9" />
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter TargetName="ExpandPath" Property="Stroke" Value="{StaticResource PrimaryColor}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ExpandPath" Property="Stroke" Value="{StaticResource PrimaryColor}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>

                            <!-- Contenido del Item -->
                            <Border x:Name="Bd" 
                                    Grid.Column="1"
                                    Padding="{TemplateBinding Padding}"
                                    BorderThickness="0"
                                    CornerRadius="4"
                                    Background="Transparent">
                                <ContentPresenter x:Name="PART_Header" 
                                                  ContentSource="Header"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center" />
                            </Border>

                            <!-- Contenedor de los elementos hijos -->
                            <ItemsPresenter x:Name="ItemsHost" 
                                            Grid.Row="1" 
                                            Grid.Column="1" 
                                            Margin="14,6,0,0" />

                            <!-- Visual states -->
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Bd" 
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                            To="#F0F7FF" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Bd" 
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                            To="#E1F5FE" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>

                        <!-- Triggers -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E1F5FE"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsSelectionActive" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="#E8F4FA"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid styles -->
        <Style x:Key="ModernDataGrid" TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFC"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="VerticalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="ModernDataGridColumnHeader" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="#F5F7FA"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Key="ModernDataGridCell" TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="{TemplateBinding Padding}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E1F5FE"/>
                    <Setter Property="Foreground" Value="{StaticResource DarkTextColor}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- Main Grid Layout -->
    <Grid>
        <!-- Define top-level Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <!-- Header with title -->
            <RowDefinition Height="auto"/>
            <!-- Rectangles: Quantity & Concepts -->
            <RowDefinition Height="auto"/>
            <!-- Charts: Cartesian & Pie -->
            <RowDefinition Height="*"/>
            <!-- Table + DB Selection -->
        </Grid.RowDefinitions>

        <!-- Define top-level Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <!-- Sidebar for tree -->
            <ColumnDefinition Width="*"/>
            <!-- Main content area -->
        </Grid.ColumnDefinitions>

        <!-- ========== HEADER WITH TITLE AND BUTTONS (Row 0) ========== -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="{StaticResource BackgroundLight}"
                BorderThickness="0 0 0 1"
                BorderBrush="#E0E0E0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.2" Color="#555"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                    <TextBlock Text="🗃️" FontSize="26" VerticalAlignment="Center"/>
                    <TextBlock Name="Titulo" 
                               Text="Explore BC3 Tool"
                               FontSize="22" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource DarkTextColor}"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                </StackPanel>
                <!-- File Button (shown when no file is loaded) -->
                <Button Name="FileButton"
                        Grid.Column="1"
                        Content="Select BC3 File"
                        Style="{StaticResource ModernButton}"
                        FontSize="16"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="200"
                        Height="45"
                        Click="LoadBC3"/>
                
                <!-- Action buttons container (right side) -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="0,0,25,0">
                    <!-- Show Graphs button -->
                    <Button x:Name="ToggleGraphs"
                            Style="{StaticResource ModernButton}"
                            Background="#2ECC71"
                            Content="Show Graphs"
                            FontSize="13"
                            Padding="12,6"
                            Margin="0,0,10,0"
                            Click="ShowGraphs"/>
                    
                    <!-- Download Button -->
                    <Button x:Name="SaveButton"
                            Style="{StaticResource ModernButton}"
                            Background="#95A5A6"
                            Content="Download"
                            FontSize="13"
                            Padding="12,6"
                            Visibility="Hidden"
                            Click="SaveButtonClick"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========== SIDEBAR WITH TREE (Column 0, Row 1-3) ========== -->
        <Border Grid.Column="0" Grid.Row="1" Grid.RowSpan="3"
                Background="{StaticResource BackgroundLight}"
                BorderThickness="0,0,1,0"
                BorderBrush="#E0E0E0"
                Margin="0,15,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Sidebar Header -->
                <TextBlock Text="Project Structure"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkTextColor}"
                           Margin="20,15,20,15"/>
                
                <!-- Tree View -->
                <!-- Tree View -->
                <ScrollViewer Grid.Row="1"
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Auto"
              Margin="5,0,5,10">
                    <TreeView Name="Tree" 
              Background="Transparent"
              BorderThickness="0">
                        <TreeView.ItemContainerStyle>
                            <StaticResource ResourceKey="ModernTreeViewItem"/>
                        </TreeView.ItemContainerStyle>

                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding hijos}">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Icon for folder/file -->
                                    <TextBlock x:Name="FolderIcon" 
                               Text="📁" 
                               FontSize="14" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>

                                    <!-- Clickable Panel that covers the entire item -->
                                    <Grid>
                                        <!-- Item text -->
                                        <TextBlock Text="{Binding Id}" 
                                   VerticalAlignment="Center"
                                   FontSize="13"/>

                                        <!-- Invisible button that covers the entire area -->
                                        <Button x:Name="TreeButton" 
                                Click="TreeClick"
                                BorderThickness="0"
                                Background="Transparent"
                                Opacity="0"
                                Cursor="Hand"
                                Padding="0,5"
                                Width="Auto"
                                Height="Auto"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Margin="-5,0,0,0">
                                        </Button>
                                    </Grid>
                                </StackPanel>

                                <!-- Change icon for leaf nodes -->
                                <HierarchicalDataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding hijos.Count}" Value="0">
                                        <Setter TargetName="FolderIcon" Property="Text" Value="📄" />
                                    </DataTrigger>
                                </HierarchicalDataTemplate.Triggers>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- ========== RECTANGLES FOR QUANTITY & CONCEPTS (Row 1) ========== -->
        <Border Grid.Row="1" Grid.Column="1" 
                Margin="20,15,20,0"
                Padding="0,0,0,15"
                BorderThickness="0,0,0,0"
                Visibility="Hidden"
                Name="RectangleInfo">
            <!-- Wrap both cards in a StackPanel -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Carbono Card -->
                <Border Grid.Column="0" 
                        Style="{StaticResource Card}"
                        Height="140" 
                        Margin="0,0,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock x:Name="QuantityTitle"
                                   Text="Total Carbono"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource DarkTextColor}"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,0"/>
                        
                        <TextBlock x:Name="Quantity"
                                   Grid.Row="1"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryColor}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Agua Card -->
                <Border Grid.Column="1" 
                        Style="{StaticResource Card}"
                        Height="140" 
                        Margin="10,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock x:Name="ConceptTitle"
                                   Text="Total Agua"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource DarkTextColor}"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,0"/>
                        
                        <TextBlock x:Name="Concepts"
                                   Grid.Row="1"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SecondaryColor}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ========== CHARTS (Row 2) ========== -->
        <Border Grid.Row="2" Grid.Column="1" 
                Margin="20,0,20,15"
                Visibility="Hidden" 
                Name="ChartSection">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Cartesian Chart Card -->
                <Border Grid.Column="0" 
                        Style="{StaticResource Card}"
                        Height="300" 
                        Margin="0,0,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Distribución de Datos"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource DarkTextColor}"
                                   Margin="15,15,15,0"/>
                        
                        <lvc:CartesianChart x:Name="Chart"
                                            Grid.Row="1"
                                            Margin="10"/>
                    </Grid>
                </Border>
                
                <!-- Pie Chart Card -->
                <Border Grid.Column="1" 
                        Style="{StaticResource Card}"
                        Height="300" 
                        Margin="10,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Distribución Porcentual"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource DarkTextColor}"
                                   Margin="15,15,15,0"/>
                        
                        <lvc:PieChart x:Name="PieChart"
                                      Grid.Row="1"
                                      Margin="10"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ========== TABLE SECTION (Row 3) ========== -->
        <Border Grid.Row="3" Grid.Column="1" 
                Style="{StaticResource Card}"
                Margin="20,0,20,15"
                Visibility="Hidden" 
                Name="TableSection">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header with filter and options -->
                    <RowDefinition Height="Auto"/> <!-- Table title -->
                    <RowDefinition Height="*"/>    <!-- DataGrid -->
                    <RowDefinition Height="Auto"/> <!-- Pagination -->
                </Grid.RowDefinitions>
                
                <!-- Header with Selector -->
                <Grid Grid.Row="0" Margin="20,15,20,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Back Button -->
                    <Button x:Name="BackButton"
                            Grid.Column="0"
                            Content="← Back"
                            Style="{StaticResource ModernButton}"
                            Background="#95A5A6"
                            Padding="12,6"
                            Visibility="Hidden"
                            Click="BackButtonClick"/>
                    
                    <!-- Table Title -->
                    <TextBlock x:Name="TitleTable"
                               Grid.Column="1"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Foreground="{StaticResource DarkTextColor}"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                    
                    <!-- Medidor Selector -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Medidor:"
                                   VerticalAlignment="Center"
                                   FontWeight="Medium"
                                   Margin="0,0,10,0"/>
                        <ComboBox x:Name="SelectMedidor"
                                  Width="120"
                                  Padding="8,5"
                                  SelectionChanged="handleChangeMedidor"
                                  SelectedIndex="0"/>
                    </StackPanel>
                </Grid>
                
                <!-- The DataGrid -->
                <DataGrid x:Name="Tabla"
                          Grid.Row="2"
                          Style="{StaticResource ModernDataGrid}"
                          Margin="20,10,20,10"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                        <DataGridTextColumn Header="Internal Id" Binding="{Binding InternalId}" Width="Auto"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding name}" Width="*"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding category}" Width="Auto"/>
                        <DataGridTextColumn Header="" x:Name="TablaMedidor" Binding="{Binding display}" Width="Auto" Visibility="Hidden"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding quantity}" Width="Auto"/>
                        <DataGridTemplateColumn Header="Options" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Button x:Name="buttonHijos" 
                                                Content="View Children"
                                                Style="{StaticResource ModernButton}"
                                                Background="#3498DB"
                                                Padding="8,3"
                                                FontSize="12"
                                                Click="handleHijos"
                                                Visibility="Visible"/>
                                        <Button x:Name="nullHijos"
                                                Content="Split Concept"
                                                Style="{StaticResource ModernButton}"
                                                Background="#F39C12"
                                                Padding="8,3"
                                                FontSize="12"
                                                Click="handleSplit"
                                                Visibility="Hidden"/>
                                        <TextBlock x:Name="Past"
                                                   Text="Previous"
                                                   Foreground="White"
                                                   Background="#E74C3C"
                                                   Padding="8,4"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Visibility="Hidden">
                                            <TextBlock.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </TextBlock.Resources>
                                        </TextBlock>
                                    </Grid>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding hijos}" Value="{x:Null}">
                                            <Setter TargetName="buttonHijos" Property="Visibility" Value="Hidden"/>
                                            <Setter TargetName="nullHijos" Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding outdated}" Value="True">
                                            <Setter TargetName="buttonHijos" Property="Visibility" Value="Hidden"/>
                                            <Setter TargetName="nullHijos" Property="Visibility" Value="Hidden"/>
                                            <Setter TargetName="Past" Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding outdated}" Value="True">
                                    <Setter Property="Background" Value="#FFECB3"/>
                                    <Setter Property="Foreground" Value="#E74C3C"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>

                <!-- Pagination Controls -->
                <StackPanel x:Name="Paginator"
                            Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="Hidden"
                            Margin="0,0,0,15">
                    <!-- Previous Page -->
                    <Button x:Name="Previous"
                            Style="{StaticResource ModernButton}"
                            Content="◀"
                            Background="Transparent"
                            Foreground="{StaticResource DarkTextColor}"
                            BorderThickness="1"
                            BorderBrush="#DDDDDD"
                            Padding="12,5"
                            Margin="0,0,10,0"
                            Click="PreviousPage"
                            Visibility="Hidden"/>

                    <!-- Page Number -->
                    <Border Background="{StaticResource BackgroundLight}"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="15,5"
                            Visibility="Hidden">
                        <TextBlock x:Name="PageNumber"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontWeight="Medium"/>
                    </Border>

                    <!-- Next Page -->
                    <Button x:Name="Next"
                            Style="{StaticResource ModernButton}"
                            Content="▶"
                            Background="Transparent"
                            Foreground="{StaticResource DarkTextColor}"
                            BorderThickness="1"
                            BorderBrush="#DDDDDD"
                            Padding="12,5"
                            Margin="10,0,0,0"
                            Click="NextPage"
                            Visibility="Hidden"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ========== POPUP DESENSAMBLADO ========== -->
        <Popup x:Name="SplitPopUp"
               Visibility="Visible"
               Placement="Center"
               IsEnabled="True">
            <Border Style="{StaticResource Card}"
                    Width="600"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Popup Header -->
                    <TextBlock Text="Split Concept"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>

                    <!-- DataGrid for Split -->
                    <DataGrid x:Name="SplitTable"
                              Grid.Row="1"
                              Style="{StaticResource ModernDataGrid}"
                              MinHeight="250"
                              MaxHeight="400"
                              Margin="0,0,0,15"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True"
                              CanUserDeleteRows="False"
                              CanUserSortColumns="False">
                        <DataGrid.Columns>
                            <DataGridComboBoxColumn Header="Category"
                                                    SelectedItemBinding="{Binding Id}"
                                                    Width="*"
                                                    x:Name="IdField"/>
                            <DataGridTextColumn Header="Description" Width="2*" Binding="{Binding name}"/>
                            <DataGridTextColumn Header="Quantity" Width="*" Binding="{Binding quantity}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Popup Buttons -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button x:Name="CancelSplit"
                                Content="Cancel"
                                Style="{StaticResource ModernButton}"
                                Background="#95A5A6"
                                Margin="0,0,10,0"
                                Padding="15,8"
                                Click="CloseSplit"/>
                        <Button x:Name="SaveSplit"
                                Content="Save"
                                Style="{StaticResource ModernButton}"
                                Background="{StaticResource SecondaryColor}"
                                Padding="15,8"
                                Click="MakeSplit"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

        <!-- ========== INITIAL FILE SELECTION OVERLAY ========== -->
        <Grid Grid.Row="1" Grid.RowSpan="3" Grid.Column="1"
              Background="{StaticResource BackgroundLight}"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              x:Name="InitialOverlay">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="No BC3 File Selected"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource DarkTextColor}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Please select a BC3 file to begin exploring"
                           FontSize="16"
                           Foreground="#95A5A6"
                           Margin="0,10,0,25"
                           HorizontalAlignment="Center"/>
                <Button Content="Select File"
                        Style="{StaticResource ModernButton}"
                        FontSize="16"
                        Padding="20,12"
                        Click="LoadBC3"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>